
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Create new category</h3>
            </div>

            <input type="text" class="form-control" id="id" placeholder="">


            <div class="box-body">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="">
                </div>
                    
                <div class="form-group">
                    <label for="slug">Slug</label>
                    <input type="text" class="form-control" id="slug" placeholder="">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" placeholder="">
                </div>
            </div>
            <div class="box-footer">
                <button id="createNewCategory" type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="box">
            <div class="box-body">
                <table id="categories" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Slug</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>


@section scripts {

    <script>

        $(document).ready(function () {

            var table = $("#categories").DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url : '@Url.Content("~/api/categories/")', dataSrc:""
                },
                columns: [
                    { data: "name" },
                    { data: "description" },
                    { data: "slug" },
                    {
                        data: "id",
                        render: function (data) {
                            var _buttons = "<button class='btn-link js-delete' data-category-id=" + data + ">Delete</button>";
                            _buttons += "<button class='btn-link js-edit' data-category-id=" + data + ">Edit</button>";
                            return _buttons;
                        }
                    }
                ]
            });

            $("#createNewCategory").on("click", function () {
                var button = $(this);
                var _data = {
                    name : $("#name").val(),
                    slug : $("#slug").val(),
                    description : $("#description").val(),
                }

                var _method = "POST";
                if ($("#id").val()) {
                    _method = "PUT";
                }

                $.ajax({
                    url: '/api/categories/' + $("#id").val(),
                    method: _method,
                    data: _data,
                    success: function () {
                        console.log("success");
                    }
                }).done(function () {
                    window.location.href = '@Url.Content("~/Categories/")';
                });
            });

            $("#categories").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this category?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '/api/categories/' + button.attr("data-category-id"),
                            method: "DELETE",
                            success: function () {
                                console.log("success");
                                table.row(button.parents("tr")).remove().draw();
                            }
                        }).done(function () {
                            bootbox.alert("Removed");
                        });
                    }
                })
            });

            $("#categories").on("click", ".js-edit", function () {
                var button = $(this);
                var _tds = button.parents("tr").children("td");
                console.log($(_tds[1]));

                $("#name").val($(_tds[0]).text());
                $("#description").val($(_tds[1]).text());
                $("#slug").val($(_tds[2]).text());
                $("#id").val(button.attr("data-category-id"));
            });



        });


    </script>

}