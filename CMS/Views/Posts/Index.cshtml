@model List<CMS.Models.Post>

@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@Html.ActionLink(@post.PostTitle, "Edit", "Posts", new { id = post.Id }, new { @class = "nav-link" })</td>
                <td>@post.PostSummary</td>
            </tr>

        }
    </tbody>

</table>

@if (Model.Count == 0)
{
    <p> We don't have any customers yet.</p>
}